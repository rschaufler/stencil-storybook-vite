{
  "name": "stencil-storybook-vite",
  "version": "1.0.0",
  "description": "Stencil Storybook Vite",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/stencil-storybook-vite/stencil-storybook-vite.esm.js",
  "exports": {
    ".": {
      "import": "./dist/stencil-storybook-vite/stencil-storybook-vite.esm.js",
      "require": "./dist/stencil-storybook-vite/stencil-storybook-vite.cjs.js"
    },
    "./my-component": {
      "types": "./dist/components/my-component.d.ts",
      "import": "./dist/components/my-component.js"
    },
    "./loader": {
      "types": "./loader/index.d.ts",
      "import": "./loader/index.js",
      "require": "./loader/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rschaufler/stencil-storybook-vite.git"
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "stencil:build": "wireit",
    "stencil:start": "stencil build --dev --watch --serve",
    "stencil:test": "stencil test --spec --e2e",
    "stencil:test.watch": "stencil test --spec --e2e --watchAll",
    "stencil:generate": "stencil generate",
    "storybook:start": "wireit",
    "storybook:build": "wireit",
    "build": "wireit",
    "start": "wireit"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.4",
    "@stencil/core": "^4.26.0",
    "@storybook/addon-essentials": "^8.5.8",
    "@storybook/addon-links": "^8.5.8",
    "@storybook/blocks": "^8.5.8",
    "@storybook/test": "^8.5.8",
    "@storybook/web-components": "^8.5.8",
    "@storybook/web-components-vite": "^8.5.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "lit": "^3.2.1",
    "prettier": "^3.5.1",
    "puppeteer": "^24.2.1",
    "storybook": "^8.5.8",
    "vite": "^6.1.1",
    "wireit": "^0.14.11"
  },
  "wireit": {
    "stencil:build": {
      "command": "stencil build --docs",
      "files": [
        "src/**/*{.scss,.ts,.tsx}",
        "tsconfig.json"
      ],
      "output": [
        "dist/**",
        "www/**",
        "loader/**"
      ]
    },
    "stencil:watch": {
      "command": "stencil build --dev --docs --watch",
      "service": {
        "readyWhen": {
          "lineMatches": "build finished, watching for changes..."
        }
      }
    },
    "storybook:build": {
      "command": "storybook build",
      "files": [
        ".storybook"
      ],
      "output": [
        "storybook-static/**"
      ],
      "dependencies": [
        "stencil:build"
      ]
    },
    "storybook:start": {
      "command": "storybook dev -p 6006",
      "service": true,
      "dependencies": [
        "stencil:build"
      ]
    },
    "build": {
      "dependencies": [
        "stencil:build",
        "storybook:build"
      ]
    },
    "start": {
      "command": "storybook dev -p 6006",
      "service": true,
      "dependencies": [
        "stencil:watch"
      ]
    }
  },
  "license": "MIT",
  "packageManager": "pnpm@10.4.1"
}
